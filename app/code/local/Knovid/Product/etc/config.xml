<?xml version="1.0"?>
<config>
    <modules>
        <Knovid_Product>
            <version>0.1.0</version>    <!-- Version of module -->
        </Knovid_Product>
    </modules>
    <frontend>
        <routers>
            <product>
                <use>standard</use>
                <args>
                    <module>Knovid_Product</module>
                    <frontName>product</frontName>
                </args>
            </product>
        </routers>
         <layout>
            <updates>
                <product>
                    <file>product.xml</file> <!-- Our layout file name-->
                </product>
            </updates>
         </layout>
    </frontend>
    <global>
        <blocks>
            <product>
                <class>Knovid_Product_Block</class>
            </product>
        </blocks>
    </global>
</config>